@model IEnumerable<ToDo>

<div class="welcome-section">
    <div class="container text-center">
        <h1><i class="fas fa-tasks me-3"></i>My ToDo List</h1>
        <p>Stay organized and get things done!</p>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="fas fa-list me-2"></i>Tasks</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create New Task
    </a>
</div>

@if (Model.Any())
{
    <div class="table-modern">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th><i class="fas fa-heading me-2"></i>Title</th>
                    <th><i class="fas fa-calendar me-2"></i>Date</th>
                    <th><i class="fas fa-check-circle me-2"></i>Status</th>
                    <th><i class="fas fa-cogs me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsDone ? "completed" : "")">
                        <td>
                            <div class="todo-title">@item.Title</div>
                            @if (!string.IsNullOrEmpty(item.Details))
                            {
                                <div class="todo-description">@item.Details</div>
                            }
                        </td>
                        <td>
                            <span class="todo-date">
                                <i class="fas fa-clock me-1"></i>@item.Date.ToString("MMM dd, yyyy")
                            </span>
                        </td>
                        <td>
                            @if (item.IsDone)
                            {
                                <span class="badge bg-success status-badge">
                                    <i class="fas fa-check me-1"></i>Completed
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning status-badge">
                                    <i class="fas fa-clock me-1"></i>Pending
                                </span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-action">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-action">
                                    <i class="fas fa-eye me-1"></i>Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-clipboard-list"></i>
        <h3>No tasks yet!</h3>
        <p>Create your first task to get started.</p>
        <a asp-action="Create" class="btn btn-primary mt-3">
            <i class="fas fa-plus me-2"></i>Create Your First Task
        </a>
    </div>
}